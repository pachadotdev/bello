{
	"name": "Bello Connector",
	"manifest_version": 2,
	"version": "1.0.0",
	"description": "Save references to Bello from your web browser",
	"default_locale": "en",
	
	"browser_action": {
		"default_icon": {
			"16": "images/logo-16.png",
			"32": "images/logo-32.png",
			"48": "images/logo-48.png"
		},
		"default_title": "Save to Bello"
	},
	
	"permissions": [
		"http://*/*", 
		"https://*/*",
		"tabs", 
		"storage",
		"activeTab",
		"webRequest",
		"webRequestBlocking"
	],
	
	"background": {
		"scripts": ["background-minimal.js"],
		"persistent": true
	},
	
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"run_at": "document_idle",
			"all_frames": true,
			"match_about_blank": true,
			"js": ["content-script.js"]
		}
	],
	
	"web_accessible_resources": [
		"images/*"
	],
	
	"content_security_policy": "script-src 'self'; object-src 'self'",
	
	"homepage_url": "https://github.com/pachadotdev/bello",
	
	"icons": {
		"16": "images/logo-16.png",
		"32": "images/logo-32.png",
		"48": "images/logo-48.png",
		"96": "images/logo-96.png",
		"128": "images/logo-128.png"
	},
	
	"commands": {
		"_execute_browser_action": {
			"suggested_key": {
				"default": "Ctrl+Shift+B"
			}
		}
	},
	
	"minimum_chrome_version": "88"
}